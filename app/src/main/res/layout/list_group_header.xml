<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textColor="@color/dark_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="@dimen/edit_text_padding"
        android:paddingEnd="@dimen/edit_text_padding"
        android:paddingBottom="@dimen/edit_text_padding"
        android:paddingTop="@dimen/edit_text_padding"
        android:paddingLeft="@dimen/lv_header_left_padding"
        android:paddingStart="@dimen/lv_header_left_padding"
        />
    <TextView
        android:id="@+id/tvTotalAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_teal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/edit_text_padding"
        />

</RelativeLayout>